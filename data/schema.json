{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio-system.local/video.schema.json",
  "title": "Studio System Video Data",
  "type": "object",
  "required": [
    "id",
    "title",
    "template",
    "fps",
    "width",
    "height",
    "scenes"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^video_[0-9]{3}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "template": {
      "type": "string",
      "enum": [
        "shorts",
        "explainer",
        "infographic",
        "protest"
      ]
    },
    "fps": {
      "type": "integer",
      "minimum": 24,
      "maximum": 60
    },
    "width": {
      "type": "integer",
      "minimum": 720
    },
    "height": {
      "type": "integer",
      "minimum": 720
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "text",
          "duration",
          "visual"
        ],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1
          },
          "subtext": {
            "type": "string"
          },
          "audio": {
            "type": "string"
          },
          "duration": {
            "type": "integer",
            "minimum": 1
          },
          "visual": {
            "type": "string"
          },
          "palette": {
            "type": "object",
            "properties": {
              "background": {
                "type": "string"
              },
              "secondary": {
                "type": "string"
              }
            }
          },
          "barValues": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "flowLabels": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "motion": {
            "type": "string"
          },
          "panX": {
            "type": "number"
          },
          "panY": {
            "type": "number"
          },
          "networkNodes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "category": {
            "type": "string"
          },
          "accentColor": {
            "type": "string"
          },
          "icons": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "animals": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "assetTags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "crowdCount": {
            "type": "integer"
          }
        }
      }
    },
    "category": {
      "type": "string"
    },
    "accentColor": {
      "type": "string"
    }
  }
}
